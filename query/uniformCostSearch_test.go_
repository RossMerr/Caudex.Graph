func (se *StorageEngine) ForEach() keyvalue.Iterator {
	position := 0
	length := len(se.keys)
	return func() (*keyvalue.KeyValue, bool) {
		if position < length {
			key := se.keys[position]
			v := se.vertices[key]
			position = position + 1
			return &v, true
		}
		return nil, false
	}
}

func (se *StorageEngine) ForEachTest() query.IteratorFrontier {
	ok := false
	return func() (*query.Frontier, bool) {
		ok = expressions.XORSwap(ok)
		if ok {
			kv := keyvalue.MarshalKeyValue(syd)
			f := query.NewFrontier(kv[0], "")
			return &f, ok
		}
		return nil, ok
	}
}

func ToIterator(i query.IteratorFrontier) []*keyvalue.KeyValue {
	results := make([]*keyvalue.KeyValue, 0)

	for frontier, ok := i(); ok; frontier, ok = i() {
		if frontier.Len() > 0 {
			parts := frontier.OptimalPath()
			for _, i := range parts {
				results = append(results, i.KeyValue)
			}
		}
	}
	return results
}

func toPredicateVertex() *query.PredicatePath {
	pvp := query.PredicatePath{Predicate: func(kv *keyvalue.KeyValue) (string, query.Traverse) {
		if kv.UUID() == per.ID() {
			return "", query.Matched
		}

		return "", query.Failed
	}}

	return &pvp
}

func toPredicateEdge() *query.PredicatePath {
	pvp := query.PredicatePath{Predicate: func(kv *keyvalue.KeyValue) (string, query.Traverse) {
		if kv.UUID() != per.ID() {
			return "", query.Visiting
		}

		return "", query.Matching
	}}

	return &pvp
}

func index(l *list.List, i int) interface{} {
	e := l.Front()
	for index := 1; index < i; index++ {
		e = e.Next()
	}

	return e.Value
}
